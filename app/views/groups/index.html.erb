<div class='col-md-12'>
<h1>討論區列表</h1>
<div class="col-md-12"> 
  <div class="group">
    <%= link_to("新增討論區", new_group_path , :class => "btn btn-primary pull-right" ) %>
  </div>

  <table class="table table-hover">
    <thead> 
      <tr>
        <td> </td>
        <td> 討論版 </td>
        <td> 版主 </td>
      </tr>
    </thead>

    <tbody>
     
            <% @groups.each do |group| %> 
    <tr>
      <td>  </td>
      <td>  <%= link_to(group.title, group_path(group)) %> </td><td><%= current_user.name %></td>
      <td>  <%= group.description %> </td>
      <td>  <% if current_user && group.editable_by?(current_user) %>
      <%= link_to("修改", 
                        edit_group_path(group), 
                        :class => "btn btn-sm btn-default")%>

            <%= link_to("刪除", 
                        group_path(group), 
                        :class => "btn btn-sm btn-default", 
                        :method=>:delete,
                        data: { confirm: "Are you sure?" } )%>
                        <%end%>
                        </td> 
    </tr>    
    <%end%>

            
    </tbody>
  </table>
</div>